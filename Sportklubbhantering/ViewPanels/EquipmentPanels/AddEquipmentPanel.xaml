<Window x:Class="UILayer.ViewPanels.EquipmentPanels.AddEquipmentPanel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UILayer.ViewPanels.EquipmentPanels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEquipmentPanel" Height="300" Width="400">
    <Grid>
        <TextBox Name="EquipmentNameTextBox" HorizontalAlignment="Left" Margin="20,30,0,0" VerticalAlignment="Top" Width="300"/>
        <TextBox Name="CategoryTextBox" HorizontalAlignment="Left" Margin="20,70,0,0" VerticalAlignment="Top" Width="300"/>
        <TextBox Name="ConditionTextBox" HorizontalAlignment="Left" Margin="20,110,0,0" VerticalAlignment="Top" Width="300"/>
        <TextBox Name="AvailableCountTextBox" HorizontalAlignment="Left" Margin="20,150,0,0" VerticalAlignment="Top" Width="300"/>

        <Button Name="SaveButton" Content="Save" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="20,200,0,0" Click="SaveButton_Click"/>
        <Button Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="140,200,0,0" Click="CancelButton_Click"/>
    </Grid>
</Window>

