<Window x:Class="Sportklubbhantering.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sportklubbhantering"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500">
    <Window.Background>
        <ImageBrush ImageSource="background.png" Stretch="UniformToFill"/>
    </Window.Background>


    <StackPanel VerticalAlignment="Top" 
            HorizontalAlignment="Center" 
            Width="400"
            Height="300"
            Margin="60">

        <TextBlock 
            Text="Log in" 
            FontSize="24" 
            Foreground="Orange"
            Background="White"
            HorizontalAlignment="Center"
            Margin="0,0,0,20"/>
        <TextBox x:Name="inputTextBoxEmail" FocusManager.FocusedElement="{Binding RelativeSource={RelativeSource Self}}"
            Style="{StaticResource TextBoxStyle}"  
            Margin="0,0,0,10"
            Padding="5"
            FontSize="14"/>
        <TextBox x:Name="inputTextBoxPassword" FocusManager.FocusedElement="{Binding RelativeSource={RelativeSource Self}}"
            Style="{StaticResource TextBoxStyle}"  
            Margin="0,0,0,10"
            Padding="5"
            FontSize="14"/>

        <Grid VerticalAlignment="center" HorizontalAlignment="center" Width="300" Height="50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Button x:Name="LogInButton" 
                Grid.Column="0"
                Style="{StaticResource CustomButtonStyle}"
                Content="Log in" 
                Click="addButton_Click"/>

            <Button x:Name="removeButton" 
                Grid.Column="1"
                Style="{StaticResource CustomButtonStyle}"
                Content="Create Account" 
                Click="removeButton_Click"/>
        </Grid>
    </StackPanel>
</Window>
